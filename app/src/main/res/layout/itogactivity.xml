<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#FFFFFF"
    android:layout_height="match_parent">

        <androidx.appcompat.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="#E86452">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_marginEnd="10dp"
                    android:src="@drawable/baseline_arrow_back_ios_new_24" />


                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="Результаты"
                    android:layout_marginLeft="10dp"
                    android:textColor="@color/white"
                    android:textSize="24sp"
                    android:textStyle="bold" />



                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="25dp"
                    android:layout_marginLeft="10dp"
                    android:src="@drawable/baseline_help_outline_24" />

            </LinearLayout>

        </androidx.appcompat.widget.Toolbar>

    <LinearLayout
    android:layout_width="match_parent"
    android:layout_weight="1"
        android:background="#FEF7E7"
    android:orientation="vertical"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_height="match_parent">
<ImageView
    android:layout_width="match_parent"
    android:src="@drawable/cubk"
    android:layout_height="match_parent"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_weight="3"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_height="match_parent">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_weight="1"
    android:gravity="center"
    android:layout_height="match_parent">
    <TextView
        android:id="@+id/tv_ball"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="40dp"
        android:text="0"/>
</LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/tv_nepr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="40dp"
                android:text="0"/>
        </LinearLayout>

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:layout_weight="1"
            android:background="@drawable/llayout"
            android:orientation="vertical">




            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:padding="15dp"
                android:layout_height="match_parent"
                android:layout_weight="2">
                <LinearLayout
                    android:id="@+id/ll_n1"
                    android:layout_width="60dp"
                    android:layout_height="60dp"

                    android:background="@drawable/tttttttttttttttt"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textSize="30sp"
                        android:gravity="center"
                        android:textColor="@color/black"
                        android:text="1"/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_n2"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginLeft="20dp"
                    android:background="@drawable/tttttttttttttttt"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textSize="30sp"
                        android:gravity="center"
                        android:textColor="@color/black"
                        android:text="2"/>


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_n3"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginLeft="20dp"
                    android:background="@drawable/tttttttttttttttt"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textSize="30sp"
                        android:gravity="center"
                        android:textColor="@color/black"
                        android:text="3"/>


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_n4"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginLeft="20dp"
                    android:background="@drawable/tttttttttttttttt"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textSize="30sp"
                        android:gravity="center"
                        android:textColor="@color/black"
                        android:text="4"/>


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_n5"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginLeft="20dp"
                    android:background="@drawable/tttttttttttttttt"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textSize="30sp"
                        android:gravity="center"
                        android:textColor="@color/black"
                        android:text="5"/>


                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="15dp"
                android:layout_weight="1">
                <LinearLayout
                    android:id="@+id/ll_n6"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:background="@drawable/tttttttttttttttt"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textSize="30sp"
                        android:gravity="center"
                        android:textColor="@color/black"
                        android:text="6"/>


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_n7"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginLeft="20dp"
                    android:background="@drawable/tttttttttttttttt"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textSize="30sp"
                        android:gravity="center"
                        android:textColor="@color/black"
                        android:text="7"/>


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_n8"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginLeft="20dp"
                    android:background="@drawable/tttttttttttttttt"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textSize="30sp"
                        android:gravity="center"
                        android:textColor="@color/black"
                        android:text="8"/>


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_n9"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginLeft="20dp"
                    android:background="@drawable/tttttttttttttttt"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textSize="30sp"
                        android:gravity="center"
                        android:textColor="@color/black"
                        android:text="9"/>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginLeft="20dp"
                    android:background="@drawable/tttttttttttttttt">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textSize="30sp"
                        android:gravity="center"
                        android:textColor="@color/black"
                        android:text="10"/>


                </LinearLayout>
            </LinearLayout>
        </LinearLayout>


        <LinearLayout
            android:id="@+id/ll_n10"
            android:layout_width="match_parent"
            android:layout_weight="4"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">
                <Button
                    android:layout_width="match_parent"
                    android:background="#E76451"
                    app:backgroundTint="@null"
                    android:layout_height="match_parent"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">
               <Button
                android:layout_width="match_parent"
                android:background="#FEF7E7"
                app:backgroundTint="@null"
                android:layout_height="match_parent"/>
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
</LinearLayout>
